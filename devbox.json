{
  "$schema": "https://raw.githubusercontent.com/jetpack-io/devbox/main/.schema/devbox.schema.json",
  "include": [
    "./plugins/nvim/plugin.json",
    "./plugins/shell/plugin.json"
  ],
  "packages": [
    "neovim@latest",
    "git@latest",
    "gnumake@latest",
    "gcc@latest",
    "ripgrep@latest",
    "fd@latest",
    "fzf@latest",
    "lua@latest",
    "nodejs@latest",
    "lazygit@latest",
    "imagemagick@latest",
    "tree-sitter@latest",
    "python3@latest",
    "atuin@latest",
    "lolcat@latest",
    "tmux@latest",
    "rustc@latest",
    "cargo@latest",
    "rust-analyzer@latest",
    "zsh@latest",
    "starship@latest",
    "coreutils@latest"
  ],
  "shell": {
    "init_hook": [
      "export ZDOTDIR=\"$DEVBOX_PROJECT_ROOT/.shell\"",
      "export TERM=xterm-256color",
      "export CLICOLOR=1"
    ],
    "scripts": {}
  }
}