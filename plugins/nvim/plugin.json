{
    "name": "neovim-config",
    "version": "0.1.0",
    "description": "Project-local NeoVim configuration with LazyVim",
    "packages": [
        "neovim@latest",
        "git@latest",
        "gnumake@latest",
        "gcc@latest",
        "ripgrep@latest",
        "fd@latest",
        "fzf@latest",
        "lua@latest",
        "nodejs@latest",
        "lazygit@latest",
        "imagemagick@latest",
        "tree-sitter@latest",
        "python3@latest"
    ],
    "shell": {
        "init_hook": [
            "source ./plugins/nvim/setup.sh"
        ],
        "scripts": {
            "nvim-update": "nvim --headless \"+Lazy! sync\" +qa",
            "nvim-health": "nvim --headless \"+checkhealth\" +qa"
        }
    }
}